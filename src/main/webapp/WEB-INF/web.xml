<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <filter>
        <filter-name>CommonFilter</filter-name>
        <filter-class>com.ipl.controller.filter.CommonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommonFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.ipl.controller.listener.OnStartListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionsServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.QuestionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PredictionServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.PredictionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaderboardServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.LeaderboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MatchServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.MatchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetQuestionsServlet</servlet-name>
        <servlet-class>com.ipl.controller.servlet.SetQuestionsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionsServlet</servlet-name>
        <url-pattern>/questionForms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PredictionServlet</servlet-name>
        <url-pattern>/prediction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaderboardServlet</servlet-name>
        <url-pattern>/leaderboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/match</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetQuestionsServlet</servlet-name>
        <url-pattern>/setquestions</url-pattern>
    </servlet-mapping>

</web-app>
